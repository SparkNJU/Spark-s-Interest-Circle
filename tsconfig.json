{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./typings", "./node_modules/@types" ],
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,  // 添加这一行
    "allowSyntheticDefaultImports": true  // 可选：为处理非默认导入的兼容性提供支持
  },
  "exclude": [
    "dist",
    "node_modules",
    "test"
  ],
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ]
}

<div id = "main">
    <% if (cookies){ %>
        欢迎你， <%=cookies.username %>! <a href="/user/logout">登出</a>
        <!--显示帖子-->
        <h2>帖子列表</h2>
        <ul>
            <% msgList.forEach(function({username, text, id}){%>
                <li>#<%= cookies.id %> <%= username %>: 
                    <%= text %></li>
                <% }); %>
        </ul>

        <!--发帖子-->
        <h2>发帖</h2>
        <form method="post" action="/message">
            <textarea name = "text"></textarea>
            <button>发布</button>
        </form>


    <%}else{%>
        <a href="/login">请登录</a>

    <%}%>
</div>

